{
    "compilerOptions": {
        "inlineSourceMap": false,             // Emit a single file with source maps instead of having a separate file.
        "inlineSources": false,               // Emit the source alongside the sourcemaps within a single file; requires --inlineSourceMap to be set.
        "jsx": "react",                       // Specify JSX code generation: 'preserve', 'react', or 'react-native'.
        "listFiles": false,                   // Print names of files part of the compilation.
        "locale": "en-us",                    // The locale to use to show error messages, e.g. en-us.
        "module": "commonjs",                 // Specify module code generation: 'none', 'CommonJS', 'Amd', 'System', 'UMD', or 'es2015'.
        "newLine": "LF",                      // Specifies the end of line sequence to be used when emitting files: 'CRLF' (dos) or 'LF' (unix).
        "noUnusedLocals": false,              // Report errors on unused locals. Requires TypeScript version 2.0 or later
        "noUnusedParameters": false,          // Report errors on unused parameters. Requires TypeScript version 2.0 or later.
        "outDir": "build/",                   // Redirect output structure to the directory
        "pretty": true,                       // Stylize errors and messages using color and context (experimental).
        "removeComments": false,              // Do not emit comments to output
        "sourceMap": true,                    // Generates corresponding '.map' file.
        "target": "es5",                      // Specify ECMAScript target version. Permitted values are 'es3', 'es5', 'es2015', 'es2016', 'es2017' or 'esnext'.
        "types": ["reflect-metadata"],
        "experimentalDecorators": true,       // Enables experimental support for ES7 decorators
        "emitDecoratorMetadata": true,        //
        "moduleResolution": "node",           // Specifies module resolution strategy: 'node' (Node) or 'classic' (TypeScript pre 1.6) .
        "baseUrl": ".",                       // Base directory to resolve non-relative module names
        "paths": {                            // Specify path mapping to be computed relative to baseUrl option.
            "*": [
                "src/*"
            ]
        },
        "allowJs": true,                      // Allow javascript files to be compiled.
        "lib": [                              // Specify library file to be included in the compilation. Requires TypeScript version 2.0 or later
            "dom",
            "es5", "es2015",
            "es6", "es2016",
            "es7", "es2017"
        ]
    },
    "exclude": [                            // Specifies a list of type declarations to be excluded from auto type acquisition. Ex. ["jquery", "lodash"]
        "node_modules",
        "test",
        "coverage",
        ".nyc_output",
        "build",
        "data",
        "envelop"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true,                     // Use internal file cache. This is useful with Babel, when processing takes a long time to complete. Improves warm-up time.
        "useBabel": true                      // Invoke Babel to transpile files. Useful with ES6 target. Please see useCache option which can improve warm-up time.
    }
}

